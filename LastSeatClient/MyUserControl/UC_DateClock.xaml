<UserControl x:Class="LastSeatClient.MyUserControl.UC_DateClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="175" Loaded="UserControl_Loaded">
    <Grid >
        <Viewbox>
            <Grid Height="200" Width="350">
                <Grid.Background>
                    <SolidColorBrush Color="White" Opacity="0.4"/>
                </Grid.Background>
                <TextBlock HorizontalAlignment="Left" Margin="0,95,0,0" TextWrapping="NoWrap" Text="{Binding TimeText}" VerticalAlignment="Top" Height="100" Width="350" Foreground="White" FontSize="80" TextAlignment="Center"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="NoWrap" Text="{Binding DateText}" VerticalAlignment="Top" Height="45" Width="350" Foreground="White" FontSize="36" TextAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="NoWrap" Text="{Binding WeekText}" VerticalAlignment="Top" Height="40" Width="350" Foreground="White" FontSize="28" TextAlignment="Center" Margin="0,60,0,0"/>
            </Grid>
        </Viewbox>
    </Grid>

</UserControl>

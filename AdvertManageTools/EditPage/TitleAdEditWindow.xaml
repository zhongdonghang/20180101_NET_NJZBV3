<Window x:Class="AdvertManageTools.EditPage.TitleAdEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="冠名广告编辑" Height="220" Width="250" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label Content="生效日期:" Height="28" HorizontalAlignment="Left" Margin="24,12,0,0" Name="label2" VerticalAlignment="Top" />
        <DatePicker Height="25" HorizontalAlignment="Left" Margin="94,12,0,0" Name="datePicker1" VerticalAlignment="Top" Width="115"  SelectedDate="{Binding TitleInfo.EffectDate}"/>
        <Label Content="失效日期:" Height="28" HorizontalAlignment="Left" Margin="24,46,0,0" Name="label3" VerticalAlignment="Top" />
        <DatePicker Height="25" HorizontalAlignment="Left" Margin="94,46,0,0" Name="datePicker2" VerticalAlignment="Top" Width="115"  SelectedDate="{Binding TitleInfo.EndDate}"/>
        <Label Content="内容:" Height="28" HorizontalAlignment="Left" Margin="24,80,0,0" Name="label4" VerticalAlignment="Top" />
        <TextBox Height="50" HorizontalAlignment="Left" Margin="94,80,0,0" Name="textBox2" VerticalAlignment="Top" Width="115" TextWrapping="Wrap" Text="{Binding TitleInfo.AdContent}" />
        <Button Content="发布" Height="23" HorizontalAlignment="Left" Margin="70,144,0,0" Name="btnSave" VerticalAlignment="Top" Width="89" Click="btnSave_Click" />
    </Grid>
</Window>

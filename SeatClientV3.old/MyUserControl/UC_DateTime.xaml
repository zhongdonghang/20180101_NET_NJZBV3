<UserControl x:Class="SeatClientV3.MyUserControl.UC_DateTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid x:Name="LayoutRoot">
        <Viewbox>
            <Canvas Height="300" Width="300">
                <Rectangle HorizontalAlignment="Left" Height="300" Stroke="White" VerticalAlignment="Top" Width="300" RadiusY="50" RadiusX="50" StrokeThickness="15"/>
                <TextBlock Height="auto" Canvas.Left="20" TextWrapping="Wrap" Text="{Binding Date}" Canvas.Top="50" Width="260" Foreground="White" FontSize="32" TextAlignment="Center"/>
                <TextBlock Height="auto" Canvas.Left="20" TextWrapping="Wrap" Text="{Binding Time}" Canvas.Top="100" Width="260" Foreground="White" FontSize="76" TextAlignment="Center"/>
                <TextBlock Height="auto" Canvas.Left="20" TextWrapping="Wrap" Text="{Binding Week}" Canvas.Top="210" Width="260" Foreground="White" FontSize="36" TextAlignment="Center"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>

                                </Path.Effect>
                                <Path.Stroke>
                                    <SolidColorBrush Color="#FF2B6090" Opacity="0.5"/>
                                </Path.Stroke>
                                <Path.Fill>
                                    <SolidColorBrush Color="White" Opacity="0.5"/>
                                </Path.Fill>
                            </Path>
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

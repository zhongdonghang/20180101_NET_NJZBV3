                                <SolidColorBrush Color="White" Opacity="0"/>
                            </Canvas.Background>
                            <Path Data="M0,100 L200,0 L200,100 L100,150 L200,200 L200,300 L0,200 L0,100" StrokeThickness="20">
                                <Path.Effect>

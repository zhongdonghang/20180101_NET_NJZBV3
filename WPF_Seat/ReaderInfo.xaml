<Window x:Class="WPF_Seat.ReaderInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="读者信息" Height="350" Width="400" WindowStyle="None"  >
    <Grid  Margin="5">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.102*"/>
    		<RowDefinition Height="0.068*"/>
    		<RowDefinition Height="0.83*"/>
    	</Grid.RowDefinitions> 
		<StackPanel  Orientation="Horizontal">
			<Label  VerticalAlignment="Center" HorizontalAlignment="Left" Width="40" FontSize="14">学号</Label>
			<Label FontSize="13"  Width="110" Height="24"  BorderThickness="0,0,0,1" BorderBrush="Black" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center">203010495554</Label>

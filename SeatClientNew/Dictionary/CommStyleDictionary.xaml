						<Line X1="0" X2="20" Y1="0" Y2="30" Stroke="White" StrokeThickness="2" Height="30" Width="20" Canvas.Top="60" Canvas.Left="15"/>
						<Line X1="0" X2="20" Y1="30" Y2="0" Stroke="White" StrokeThickness="2" Height="30" Width="20" Canvas.Top="90" Canvas.Left="15"/>
					</Canvas>

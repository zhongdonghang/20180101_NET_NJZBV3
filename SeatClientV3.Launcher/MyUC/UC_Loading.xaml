            	</Ellipse>
				<Ellipse Fill="#FFafafaf" Height="30" Width="30" Canvas.Left="85" Canvas.Top="25" RenderTransformOrigin="0.5,2.5" >
            		<Ellipse.RenderTransform>
            			<TransformGroup>
            				<ScaleTransform/>
            				<SkewTransform/>
                        <RotateTransform Angle="{Binding RotateAngles[4]}"/>
            				<TranslateTransform/>
            			</TransformGroup>
            		</Ellipse.RenderTransform>
            		<Ellipse.Effect>
                    <DropShadowEffect Color="#FFA7A7A7" Direction="{Binding DirectionAngles[4]}"/>
            		</Ellipse.Effect>
            	</Ellipse>
				<Ellipse Fill="#FFCFCFCF" Height="30" Width="30" Canvas.Left="85" Canvas.Top="25" RenderTransformOrigin="0.5,2.5" >
            		<Ellipse.RenderTransform>
            			<TransformGroup>
            				<ScaleTransform/>
            				<SkewTransform/>
                        <RotateTransform Angle="{Binding RotateAngles[5]}"/>
            				<TranslateTransform/>

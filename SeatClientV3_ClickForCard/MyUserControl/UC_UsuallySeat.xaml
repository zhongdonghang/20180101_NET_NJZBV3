<UserControl x:Class="SeatClientV3.MyUserControl.UC_UsuallySeat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="230">
    <Grid>
        <TextBlock Margin="0" TextWrapping="Wrap" Text="{Binding SeatInfo}" Style="{DynamicResource TextBlock_White_S}" Visibility="{Binding UCVisible}"/>
    </Grid>
</UserControl>
